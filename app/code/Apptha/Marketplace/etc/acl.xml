<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"  xsi:noNamespaceSchemaLocation="../../../../../lib/internal/Magento/Framework/Acl/etc/acl.xsd">
  <acl>
    <resources>
      <resource id="Magento_Backend::admin">
        <resource id="Apptha_Marketplace::main_menu" title="Apptha Marketplace" sortOrder="20">
          <resource id="Apptha_Marketplace::settings" title="Configurations" sortOrder="4" />
          <resource id="Apptha_Marketplace::manage_sellers" title="Manage Sellers" sortOrder="2" />
          <resource id="Apptha_Marketplace::manage_products" title="Manage Products" sortOrder="3" />
          <resource id="Apptha_Marketplace::manage_transactions" title="Manage Seller Orders" sortOrder="4" />
          <resource id="Apptha_Marketplace::manage_payments" title="Manage Seller Payments" sortOrder="5" />
          <resource id="Apptha_Marketplace::manage_review" title="Manage Seller Review" sortOrder="6" />
          <resource id="Apptha_Marketplace::manage_subscriptionplans" title="Manage Seller Subscription Plans" sortOrder="7" />
          <resource id="Apptha_Marketplace::manage_subscriptionprofiles" title="Manage Subscribed Profiles" sortOrder="8" />
        </resource>
        <resource id="Magento_Backend::stores">
          <resource id="Magento_Backend::stores_settings">
            <resource id="Magento_Config::config">
              <resource id="Apptha_Marketplace::system_config" title="Apptha Marketplace Section" />
            </resource>
          </resource>
        </resource>
      </resource>
    </resources>
  </acl>
</config>