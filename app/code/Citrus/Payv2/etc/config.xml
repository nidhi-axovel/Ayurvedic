<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Store:etc/config.xsd">
    <default>
        <payment>
            <citrus>
                <model>Citrus\Payv2\Model\PaymentMethod</model>
                <title>Citruspay</title>
				<apikey backend_model="Magento\Config\Model\Config\Backend\Encrypted" />
				<accesskey backend_model="Magento\Config\Model\Config\Backend\Encrypted" />
				<vanityurl backend_model="Magento\Config\Model\Config\Backend\Encrypted" />
                <payment_action>Sale</payment_action>
                <visible_on_cart>1</visible_on_cart>
                <order_status>pending_payment</order_status>
            </citrus>
        </payment>
    </default>
</config>
